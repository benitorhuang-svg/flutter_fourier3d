<div id="panel-manual" class="absolute inset-0 flex flex-col flex-grow transition-opacity duration-500">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-3 mb-3">
    <!-- Presets -->
    <div class="flex overflow-x-auto gap-1.5 pb-2 md:pb-0 scrollbar-hide">
        <button class="preset-btn shrink-0 px-3 py-1.5 rounded-xl text-[10px] uppercase tracking-widest bg-white/5 hover:bg-white/10 border border-white/10 active:scale-95 transition-all font-bold text-slate-300 hover:text-white hover:border-white/20" data-preset="square">Square</button>
        <button class="preset-btn shrink-0 px-3 py-1.5 rounded-xl text-[10px] uppercase tracking-widest bg-white/5 hover:bg-white/10 border border-white/10 active:scale-95 transition-all font-bold text-slate-300 hover:text-white hover:border-white/20" data-preset="sawtooth">Sawtooth</button>
        <button class="preset-btn shrink-0 px-3 py-1.5 rounded-xl text-[10px] uppercase tracking-widest bg-white/5 hover:bg-white/10 border border-white/10 active:scale-95 transition-all font-bold text-slate-300 hover:text-white hover:border-white/20" data-preset="triangle">Triangle</button>
        <button class="preset-btn shrink-0 px-3 py-1.5 rounded-xl text-[10px] uppercase tracking-widest bg-white/5 hover:bg-white/10 border border-white/10 active:scale-95 transition-all font-bold text-slate-300 hover:text-white hover:border-white/20" data-preset="pulse">Pulse</button>
        <button class="preset-btn shrink-0 active px-3 py-1.5 rounded-xl text-[10px] uppercase tracking-widest active:scale-95 transition-all font-bold" data-preset="custom">Custom</button>
    </div>
    
    <!-- Quantity -->
    <div class="flex items-center justify-between md:justify-start gap-4 bg-black/40 px-4 py-2 md:px-3 md:py-1.5 rounded-xl border border-white/5 shrink-0 transition-colors hover:border-white/10">
        <span class="text-[10px] md:text-[9px] uppercase font-bold text-slate-500 tracking-widest">Harmonics</span>
        <input type="number" id="harmonic-count-input" value="10" min="1" max="60" class="bg-transparent w-10 text-sm md:text-xs font-mono text-blue-400 outline-none text-right transition-colors hover:text-blue-300 focus:text-blue-300">
    </div>
    </div>

