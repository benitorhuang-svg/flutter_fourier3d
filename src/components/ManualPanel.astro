<div id="panel-manual" class="absolute inset-0 flex flex-col flex-grow transition-opacity duration-500">
    <div class="flex flex-col gap-3 mb-3">
        <!-- Presets Grid (Clicking Boxes) -->
        <div class="grid grid-cols-3 sm:grid-cols-5 gap-2 w-full">
            <button class="preset-btn px-2 py-2 rounded-xl text-[9px] md:text-[10px] uppercase tracking-widest bg-white/5 hover:bg-white/10 border border-white/10 active:scale-95 transition-all font-bold text-slate-300 hover:text-white flex items-center justify-center text-center leading-tight h-10" data-preset="square">Square</button>
            <button class="preset-btn px-2 py-2 rounded-xl text-[9px] md:text-[10px] uppercase tracking-widest bg-white/5 hover:bg-white/10 border border-white/10 active:scale-95 transition-all font-bold text-slate-300 hover:text-white flex items-center justify-center text-center leading-tight h-10" data-preset="sawtooth">Sawtooth</button>
            <button class="preset-btn px-2 py-2 rounded-xl text-[9px] md:text-[10px] uppercase tracking-widest bg-white/5 hover:bg-white/10 border border-white/10 active:scale-95 transition-all font-bold text-slate-300 hover:text-white flex items-center justify-center text-center leading-tight h-10" data-preset="triangle">Triangle</button>
            <button class="preset-btn px-2 py-2 rounded-xl text-[9px] md:text-[10px] uppercase tracking-widest bg-white/5 hover:bg-white/10 border border-white/10 active:scale-95 transition-all font-bold text-slate-300 hover:text-white flex items-center justify-center text-center leading-tight h-10" data-preset="pulse">Pulse</button>
            <button class="preset-btn shrink-0 active px-2 py-2 rounded-xl text-[9px] md:text-[10px] uppercase tracking-widest active:scale-95 transition-all font-bold flex items-center justify-center text-center leading-tight h-10" data-preset="custom">Custom</button>
            
            <!-- Quantity Box -->
            <div class="col-span-1 sm:col-span-1 flex items-center justify-center bg-black/40 rounded-xl border border-white/5 hover:border-white/10 group h-10 px-1.5 transition-colors">
                <div class="flex items-center gap-1.5">
                    <span class="text-[7px] font-bold uppercase text-slate-500 tracking-tighter mr-0.5">Harmonics</span>
                    <div class="flex items-center gap-0.5">
                        <button id="harmonic-dec" class="w-4 h-4 md:w-5 md:h-5 flex items-center justify-center rounded bg-white/5 hover:bg-white/10 active:scale-90 transition-all text-blue-400 text-[10px] font-bold">-</button>
                        <span id="harmonic-count-display" class="text-[10px] font-mono text-blue-400 w-4 text-center">10</span>
                        <button id="harmonic-inc" class="w-4 h-4 md:w-5 md:h-5 flex items-center justify-center rounded bg-white/5 hover:bg-white/10 active:scale-90 transition-all text-blue-400 text-[10px] font-bold">+</button>
                    </div>
                </div>
                <input type="number" id="harmonic-count-input" value="10" min="1" max="60" class="hidden">
            </div>
        </div>
    </div>

    <!-- Sliders Grid (N*5 Layout) -->
    <div id="sliders-container" class="grid grid-cols-2 lg:grid-cols-5 gap-2 overflow-y-auto min-h-[150px] max-h-[40vh] md:max-h-[300px] pr-2 custom-scrollbar flex-grow transition-all">
    <!-- Generated dynamically -->
    </div>
</div>
