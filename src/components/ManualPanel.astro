    <div id="sliders-container" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-2 overflow-y-auto min-h-[150px] max-h-[40vh] md:max-h-[300px] pr-2 custom-scrollbar flex-grow transition-all">
