<div id="panel-auto" class="absolute top-24 left-2 md:left-6 w-[180px] md:w-72 flex flex-col hidden opacity-0 transition-all duration-500 z-10 pointer-events-none gap-3 md:gap-4 items-stretch glass-card rounded-xl md:rounded-2xl p-2 md:p-4 shadow-2xl bg-slate-900/80 md:bg-slate-900/60 backdrop-blur-xl border border-white/5">
    
    <div class="flex flex-col gap-2 pointer-events-auto">
        <h3 class="text-[10px] md:text-xs font-black text-amber-400 uppercase tracking-[0.2em] mb-1">Cinematic Tour</h3>
        
        <div class="flex flex-col gap-4">
            <!-- Rotation Speed -->
            <div class="p-3 rounded-xl border flex flex-col gap-2" style="background: var(--color-bg-inner); border-color: var(--color-border-inner);">
                <div class="flex justify-between text-[8px] md:text-[10px] text-slate-400 font-bold uppercase tracking-wider">
                    <span>Rotation Speed</span>
                    <span id="orbit-speed-val" class="text-amber-400 font-mono">1.0x</span>
                </div>
                <div class="grid grid-cols-[auto_1fr_auto] items-center gap-1 md:gap-2 w-full">
                    <button class="btn-ctrl-amber shrink-0" onclick="document.getElementById('orbit-speed').stepDown(); document.getElementById('orbit-speed').dispatchEvent(new Event('input'))">-</button>
                    <input type="range" id="orbit-speed" min="0.1" max="3" step="0.1" value="1.0" class="w-full min-w-0 h-1 accent-amber-500 cursor-pointer">
                    <button class="btn-ctrl-amber shrink-0" onclick="document.getElementById('orbit-speed').stepUp(); document.getElementById('orbit-speed').dispatchEvent(new Event('input'))">+</button>
                </div>
            </div>

            <!-- Orbit Radius -->
            <div class="p-3 rounded-xl border flex flex-col gap-2" style="background: var(--color-bg-inner); border-color: var(--color-border-inner);">
                <div class="flex justify-between text-[8px] md:text-[10px] text-slate-400 font-bold uppercase tracking-wider">
                    <span>Orbit Radius</span>
                    <span id="orbit-radius-val" class="text-amber-400 font-mono">350</span>
                </div>
                <div class="grid grid-cols-[auto_1fr_auto] items-center gap-1 md:gap-2 w-full">
                    <button class="btn-ctrl-amber shrink-0" onclick="document.getElementById('orbit-radius').stepDown(); document.getElementById('orbit-radius').dispatchEvent(new Event('input'))">-</button>
                    <input type="range" id="orbit-radius" min="200" max="600" step="10" value="350" class="w-full min-w-0 h-1 accent-amber-500 cursor-pointer">
                    <button class="btn-ctrl-amber shrink-0" onclick="document.getElementById('orbit-radius').stepUp(); document.getElementById('orbit-radius').dispatchEvent(new Event('input'))">+</button>
                </div>
            </div>

            <!-- Sphere Size -->
            <div class="p-3 rounded-xl border flex flex-col gap-2" style="background: var(--color-bg-inner); border-color: var(--color-border-inner);">
                <div class="flex justify-between text-[8px] md:text-[10px] text-slate-400 font-bold uppercase tracking-wider">
                    <span>Sphere Size</span>
                    <span id="sphere-size-val" class="text-amber-400 font-mono">0.3x</span>
                </div>
                <div class="grid grid-cols-[auto_1fr_auto] items-center gap-1 md:gap-2 w-full">
                    <button class="btn-ctrl-amber shrink-0" onclick="document.getElementById('sphere-size').stepDown(); document.getElementById('sphere-size').dispatchEvent(new Event('input'))">-</button>
                    <input type="range" id="sphere-size" min="0.1" max="5" step="0.1" value="0.3" class="w-full min-w-0 h-1 accent-amber-500 cursor-pointer">
                    <button class="btn-ctrl-amber shrink-0" onclick="document.getElementById('sphere-size').stepUp(); document.getElementById('sphere-size').dispatchEvent(new Event('input'))">+</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style is:global>
    @reference "../styles/global.css";

    .btn-ctrl-amber {
        @apply w-6 h-6 flex items-center justify-center rounded active:scale-95 transition-all text-amber-400 text-sm font-black;
        background: var(--color-bg-inner);
        border: 1px solid var(--color-border-inner);
    }
    .btn-ctrl-amber:hover {
        background: rgba(255, 255, 255, 0.1);
    }
</style>
