---
// src/components/NavigationTabs.astro
interface Props {
  activeTab: 'home' | 'play_ground' | 'market_fourier' | 'market_data';
}

const { activeTab } = Astro.props;

const tabs = [
  { id: 'home', label: 'Home', href: import.meta.env.BASE_URL },
  { id: 'play_ground', label: 'Playground', href: `${import.meta.env.BASE_URL}/play_ground`.replace(/\/\//g, '/') },
  { id: 'market_fourier', label: 'Market Fourier', href: `${import.meta.env.BASE_URL}/market-fourier`.replace(/\/\//g, '/') },
  { id: 'market_data', label: 'Market Data', href: `${import.meta.env.BASE_URL}/market-data`.replace(/\/\//g, '/') }
];
---

<nav class="flex space-x-1.5 bg-slate-950/80 backdrop-blur-3xl p-1.5 rounded-2xl border border-white/10 shadow-2xl transition-all duration-300 pointer-events-auto mx-4 sm:mx-0">
  {tabs.map(tab => (
    <a
      href={tab.href}
      class={`px-5 sm:px-6 py-2.5 sm:py-2 rounded-xl text-[10px] sm:text-[10px] uppercase font-black tracking-[0.2em] sm:tracking-[0.15em] transition-all duration-500 whitespace-nowrap ${
        activeTab === tab.id
          ? 'bg-gradient-to-br from-emerald-500/30 to-cyan-500/30 border border-emerald-400/50 text-emerald-400 shadow-[0_0_25px_rgba(16,185,129,0.2)]'
          : 'border border-transparent text-slate-500 hover:text-slate-300 hover:bg-white/5'
      }`}
    >
      <span class="sm:inline hidden">{tab.label}</span>
      <span class="sm:hidden inline">
        {tab.id === 'play_ground' ? 'PLAY' : 
         tab.id === 'market_fourier' ? 'MARKET' : 
         tab.id === 'market_data' ? 'DATA' : tab.label}
      </span>
    </a>
  ))}
</nav>

<script>
  // Add some micro-animations on route change if wanted or just rely on CSS
</script>
