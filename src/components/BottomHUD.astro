---
import CinematicPanel from "./CinematicPanel.astro";
import AudioPanel from "./AudioPanel.astro";
import ManualPanel from "./ManualPanel.astro";
---

<div id="bottom-hud" class="absolute bottom-0 left-0 w-full p-2 md:p-8 transition-[opacity,transform] duration-400 md:translate-y-0 translate-y-0 opacity-100 pointer-events-auto">
  <div class="bg-gradient-to-t from-black/80 to-black/40 md:bg-gradient-to-br md:from-white/10 md:to-white/5 backdrop-blur-[40px] border-t md:border border-white/10 p-4 md:p-5 rounded-t-[2rem] md:rounded-[2rem] flex flex-col md:flex-row gap-4 md:gap-6 relative overflow-hidden shadow-[0_-20px_50px_rgba(0,0,0,0.6)] md:shadow-[inset_0_1px_1px_rgba(255,255,255,0.1),0_0_50px_rgba(0,0,0,0.5)] transition-all">

    <!-- Mobile Drag Handle -->
    <div class="w-12 h-1.5 bg-white/20 rounded-full mx-auto md:hidden mb-2 transition-colors hover:bg-white/40"></div>
    
    <div id="now-playing" class="hidden absolute opacity-0 pointer-events-none"></div>

    <!-- Dynamic Panel Area (Right Segment) -->
    <div class="flex-grow relative min-h-[300px] md:min-h-[180px]">
      <CinematicPanel />
      <AudioPanel />
      <ManualPanel />
    </div>

    </div>
  </div>
</div>
